<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/ConfirmationNo"
        android:text="Confirmation No:"
        android:textStyle="bold"
        android:textSize="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/ConfirmationNoDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/ConfirmationNo"
        android:layout_marginStart="9dp"
        android:layout_toEndOf="@id/ConfirmationNo"
        android:text="Confirmation"
        android:textSize="16dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ConfirmationNo"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="10dp"
        android:text="Description:"
        android:textStyle="bold"
        android:textSize="16dp"/>

    <!-- TextView beside "House" TextView -->

    <TextView
        android:id="@+id/descriptionDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/description"
        android:layout_marginStart="22dp"
        android:layout_toEndOf="@id/description"
        android:text="Description Detail"
        android:textSize="16dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/decisionStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/description"
        android:layout_alignStart="@id/description"
        android:layout_marginTop="12dp"
        android:text="Decision Status:"
        android:textStyle="bold"
        android:textSize="16dp"/>

    <!-- New TextView beside "Room" TextView -->

    <TextView
        android:id="@+id/decisionStatusDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/decisionStatus"
        android:layout_marginStart="19dp"
        android:layout_toEndOf="@id/decisionStatus"
        android:text="Additional Detail"
        android:textSize="16dp"
        android:textStyle="bold" />

    <View
        android:id="@+id/horizontalLine"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_below="@id/decisionStatusDetail"
        android:background="#000000"
        android:layout_marginTop="8dp"
        android:alpha="0.5" />
</RelativeLayout>