<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

        <TextView
            android:id="@+id/hotelName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:layout_gravity=""
            android:textStyle="bold" />


    <ImageView
        android:id="@+id/hotelImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:adjustViewBounds="true" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/hotelAC"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#333333"
            android:text="AC"
            android:drawableLeft="@drawable/baseline_ac_unit_24"
            />

        <TextView
            android:id="@+id/hotelWifi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#333333"
            android:layout_gravity="center"
            android:text="Wifi"
            android:drawableLeft="@drawable/baseline_network_wifi_24"
            />

        <TextView
            android:id="@+id/hotelParking"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Parkings"
            android:textColor="#333333"
            android:drawableLeft="@drawable/baseline_directions_car_24"
            android:gravity="right"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/hotelNoSmoke"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="No Smoking"
            android:textColor="#333333"
            android:drawableLeft="@drawable/baseline_check_circle_24"/>
        />

        <TextView
            android:id="@+id/hotelTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TV"
            android:textColor="#333333"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/baseline_tv_24"
            />

        <TextView
            android:id="@+id/hotelRefrigerator"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Refrigerator"
            android:textColor="#333333"
            android:gravity="right"
            android:drawableLeft="@drawable/baseline_check_circle_24"/>
    </LinearLayout>
    <Button
        android:id="@+id/bookNowButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Book Now"
        android:layout_gravity="center" />
</LinearLayout>
